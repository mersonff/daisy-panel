<div class="container mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center gap-4">
      <%= link_to admin_clients_path, class: "btn btn-ghost btn-sm" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-base-content"><%= @client.name %></h1>
        <p class="text-base-content/70">Cliente cadastrado em <%= l(@client.created_at, format: :long) %></p>
      </div>
    </div>
    
    <div class="flex gap-2">
      <%= link_to edit_admin_client_path(@client), 
          class: "btn btn-primary", 
          data: { turbo_frame: "_top" } do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Editar
      <% end %>
      
      <%= button_to admin_client_path(@client), 
          method: :delete,
          class: "btn btn-error btn-outline",
          form: { 
            data: { 
              controller: "confirm-delete",
              confirm_delete_item_name_value: @client.name,
              confirm_delete_item_type_value: "o cliente",
              confirm_delete_confirm_text_value: "Sim, Remover Cliente",
              confirm_delete_additional_info_value: "Todos os dados relacionados a este cliente serão permanentemente excluídos."
            }
          } do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Remover
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Informações Principais -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Dados Pessoais -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title flex items-center">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Dados Pessoais
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <div class="text-sm text-base-content/70 mb-1">Nome Completo</div>
              <div class="text-lg font-semibold"><%= @client.name %></div>
            </div>
            
            <div>
              <div class="text-sm text-base-content/70 mb-1">CPF</div>
              <div class="text-lg font-mono">
                <%= @client.cpf.gsub(/(\d{3})(\d{3})(\d{3})(\d{2})/, '\1.\2.\3-\4') %>
              </div>
            </div>
            
            <div class="md:col-span-2">
              <div class="text-sm text-base-content/70 mb-1">Telefone</div>
              <div class="text-lg">
                <a href="tel:<%= @client.phone.gsub(/\D/, '') %>" class="link link-primary">
                  <%= @client.phone %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Endereço -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title flex items-center">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Endereço
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="md:col-span-2">
              <div class="text-sm text-base-content/70 mb-1">Endereço</div>
              <div class="text-lg"><%= @client.address %></div>
            </div>
            
            <div>
              <div class="text-sm text-base-content/70 mb-1">CEP</div>
              <div class="text-lg font-mono"><%= @client.cep %></div>
            </div>
            
            <div>
              <div class="text-sm text-base-content/70 mb-1">Cidade</div>
              <div class="text-lg"><%= @client.city %></div>
            </div>
            
            <div>
              <div class="text-sm text-base-content/70 mb-1">Estado</div>
              <div class="text-lg"><%= @client.state %></div>
            </div>
            
            <div>
              <div class="text-sm text-base-content/70 mb-1">Endereço Completo</div>
              <div class="text-sm">
                <a href="https://maps.google.com/?q=<%= "#{@client.address}, #{@client.city}, #{@client.state}, #{@client.cep}".gsub(' ', '+') %>" 
                   target="_blank" 
                   class="link link-primary flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  Ver no Google Maps
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Status -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title text-lg">Status</h3>
          
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm">Cliente ativo</span>
              <div class="badge badge-success">Ativo</div>
            </div>
            
            <div class="divider my-2"></div>
            
            <div class="text-sm space-y-2">
              <div class="flex justify-between">
                <span class="text-base-content/70">Cadastrado em:</span>
                <span><%= l(@client.created_at, format: :short) %></span>
              </div>
              
              <% if @client.updated_at != @client.created_at %>
                <div class="flex justify-between">
                  <span class="text-base-content/70">Atualizado em:</span>
                  <span><%= l(@client.updated_at, format: :short) %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title text-lg">Ações Rápidas</h3>
          
          <div class="space-y-2">
            <a href="tel:<%= @client.phone.gsub(/\D/, '') %>" class="btn btn-outline btn-sm w-full justify-start">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Ligar
            </a>
            
            <a href="https://wa.me/<%= @client.phone.gsub(/\D/, '') %>" 
               target="_blank" 
               class="btn btn-outline btn-sm w-full justify-start">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.570-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.109"/>
              </svg>
              WhatsApp
            </a>

            <!-- TODO: Adicionar link para compromissos quando implementado -->
            <button class="btn btn-outline btn-sm w-full justify-start" disabled>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 012 0v4m0 0V3a1 1 0 012 0v4m0 0V7a2 2 0 012 2v2m0 0v6a2 2 0 01-2 2H6a2 2 0 01-2-2v-6m0 0V9a2 2 0 012-2h8a2 2 0 012 2v2"></path>
              </svg>
              Ver Compromissos
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
