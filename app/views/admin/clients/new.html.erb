<div class="container mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex items-center gap-4 mb-8">
    <%= link_to admin_clients_path, 
        class: "btn btn-ghost btn-sm" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
    <% end %>
    <div>
      <h1 class="text-3xl font-bold text-base-content">Novo Cliente</h1>
      <p class="text-base-content/70">Preencha os dados do cliente</p>
    </div>
  </div>

  <!-- Form -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <%= render "form", client: @client %>
    </div>
  </div>
</div>
