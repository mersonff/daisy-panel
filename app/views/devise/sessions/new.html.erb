<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <!-- Title Section -->
    <div class="text-center mb-8">
      <h1 class="text-5xl font-bold"><%= t('devise.sessions.new.sign_in') %></h1>
      <p class="py-6 text-lg">Acesse o painel administrativo do Daisy Panel</p>
    </div>
    
    <!-- Form Section -->
    <div class="card shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-4") do |form| %>
          <div class="form-control">
            <%= form.label :email, class: "label" do %>
              <span class="label-text"><%= User.human_attribute_name(:email) %></span>
            <% end %>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered", required: true %>
          </div>

          <div class="form-control">
            <%= form.label :password, class: "label" do %>
              <span class="label-text"><%= User.human_attribute_name(:password) %></span>
            <% end %>
            <%= form.password_field :password, autocomplete: "current-password", class: "input input-bordered", required: true %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-control">
              <label class="label cursor-pointer justify-start">
                <%= form.check_box :remember_me, class: "checkbox mr-2" %>
                <span class="label-text"><%= User.human_attribute_name(:remember_me) %></span>
              </label>
            </div>
          <% end %>

          <div class="form-control mt-6">
            <%= form.submit t('devise.sessions.new.sign_in'), class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="divider">OU</div>
        
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
