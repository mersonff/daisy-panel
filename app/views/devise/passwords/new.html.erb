<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <!-- Title Section -->
    <div class="text-center mb-8">
      <h1 class="text-5xl font-bold">Esqueceu a senha?</h1>
      <p class="py-6 text-lg">Digite seu email para receber instruções de recuperação</p>
    </div>
    
    <!-- Form Section -->
    <div class="card shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, local: true, class: "space-y-4") do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-control">
            <%= f.label :email, class: "label" do %>
              <span class="label-text">Email</span>
            <% end %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered", required: true %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit "Enviar instruções", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="divider">OU</div>
        
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
